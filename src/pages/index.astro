---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import styles from '../styles/global.css';

const projects = [
    { title: "Between Two Fires", description: "Ketika pertemanan, kesetiaan, dan cinta di uji hingga batasnya.", image: "/assets/project1.jpg" },
    { title: "Sunk Into The Void", description: "What's Beyond Creativity.", image: "/assets/project2.jpg" },
    { title: "Digital Landscape", description: "Don't Limit Your Dreams.", image: "/assets/project3.jpg" },
];
---

<Layout>
    <div class="landing-page">
        <header>
            <div class="logo-container">
                <img src="/assets/logo.png" alt="Horizon Graze Studios" class="logo">
            </div>
            <nav>
                <a href="#about">About</a>
                <a href="#projects">Projects</a>
                <a href="#contact">Contact</a>
            </nav>
        </header>
        <section class="hero">
            <h1>HORIZON GRAZE STUDIOS</h1>
            <p>Pushing The Limits Of What Is Impossible in Creativity</p>
            <a href="#projects" class="cta-button">Our Latest Project</a>
        </section>
        <section id="projects" class="projects">
            <h2>Latest Projects</h2>
            <div class="project-grid">
                {projects.map((project, index) => (
                    <div class="project-card" data-index={index}>
                        <img src={project.image} alt={project.title} />
                        <div class="project-info">
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</Layout>

<style>
    .landing-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        color: #fff;
        font-family: 'Cabinet Grotesk';
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

    .logo-container {
        flex: 1;
    }

    .logo {
        max-width: 300px;
        height: auto;
    }

    nav {
        flex: 1;
        text-align: right;
    }

    nav a {
        color: #fff;
        text-decoration: none;
        margin-left: 1.5rem;
        font-family: 'Cabinet Grotesk';
        font-weight: 500;
        transition: color 0.3s ease;
    }

    nav a:hover {
        color: #FF4500;
    }

    .hero {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 2rem;
    }

    h1 {
        font-family: 'Cabinet Grotesk';
        font-size: 4rem;
        margin-bottom: 1rem;
        text-shadow: 0 0 10px rgba(255, 69, 0, 0.7);
    }

    .hero p {
        font-size: 1.5rem;
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background: linear-gradient(45deg, #FF4500, #FF8C00);
        color: #000;
        text-decoration: none;
        font-family: 'Cabinet Grotesk';
        font-weight: 700;
        border-radius: 30px;
        text-transform: uppercase;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 69, 0, 0.4);
    }

    .projects {
        padding: 4rem 2rem;
        background: rgba(0, 0, 0, 0.7);
    }

    .projects h2 {
        font-family: 'Cabinet Grotesk';
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
        color: #FF4500;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .project-card {
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(255, 69, 0, 0.4);
    }

    .project-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .project-info {
        padding: 1.5rem;
    }

    .project-info h3 {
        font-family: 'Cabinet Grotesk';
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #FF4500;
    }

    .project-info p {
        font-size: 1rem;
        color: #ccc;
    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.from(".hero h1", { opacity: 0, y: 50, duration: 1, delay: 0.5 });
    gsap.from(".hero p", { opacity: 0, y: 30, duration: 1, delay: 1 });
    gsap.from(".cta-button", { opacity: 0, y: 30, duration: 1, delay: 1.5 });
    gsap.from("nav a", { opacity: 0, y: -20, duration: 0.5, stagger: 0.2 });

    gsap.utils.toArray(".project-card").forEach((card, index) => {
        gsap.from(card, {
            opacity: 0,
            y: 50,
            duration: 0.8,
            scrollTrigger: {
                trigger: card,
                start: "top bottom-=100",
                end: "bottom center",
                toggleActions: "play none none reverse"
            },
            delay: index * 0.2
        });
    });
</script>